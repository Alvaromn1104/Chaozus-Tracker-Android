<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoprincipal3"
    android:fillViewport="true"
    tools:context=".MainActivity"
    android:theme="@style/Theme.TextMain">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/perfil"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/image0"
            app:layout_constraintTop_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/linearLayoutNews"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perfil">

            <TextView
                android:id="@+id/tittleDlcs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="NOTICIAS"
                android:textSize="40sp"
                android:textColor="@color/white">
            </TextView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewNews1Dlcs"
            android:layout_width="350dp"
            android:layout_height="750dp"
            android:layout_margin="15dp"
            android:orientation="vertical"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutNews">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/webViewlinear3"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_width="300dp"
                    android:layout_height="170dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:src="@drawable/millo5">

                    </ImageView>
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayoutnews1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/boogalooregular"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp"
                            android:text="@string/newsDlc1"
                            android:textStyle="bold"
                            android:textSize="17sp">
                        </TextView>

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/boogalooregular"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp"
                            android:text="@string/newsDlc1intro"
                            android:textStyle="italic"
                            android:textSize="17sp">
                        </TextView>

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:fontFamily="@font/boogalooregular"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp"
                            android:text="@string/newsDlc1conten1"
                            android:textSize="17sp">
                        </TextView>

                        <TextView
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="15sp"
                            android:layout_marginEnd="15sp"
                            android:fontFamily="@font/boogalooregular"
                            android:text="@string/newsDlc1conten2"
                            android:textSize="17sp">
                        </TextView>


                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
